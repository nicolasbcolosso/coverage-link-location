<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AR_NV_FS_Fee</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Status__c , &quot;Received&quot;),
AND(OR(
Opportunity__r.Account.ShippingState = &quot;Arkansas&quot;,
Opportunity__r.Account.ShippingState = &quot;Nevada&quot;), 
FS_Fees__c &gt; 0.20 * (Premium__c - 79)))</errorConditionFormula>
    <errorMessage>FS Fees for Arkansas and Nevada must not exceed 20% of Premium.</errorMessage>
</ValidationRule>
