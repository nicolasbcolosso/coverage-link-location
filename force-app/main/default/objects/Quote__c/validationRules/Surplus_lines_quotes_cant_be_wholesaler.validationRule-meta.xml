<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Surplus_lines_quotes_cant_be_wholesaler</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
Surplus_Lines_Quote__c = TRUE,
 OR(
  Marketer_UW_Name__r.Account.Record_Type__c = &quot;Wholesaler&quot;,
  Account_Mailing_Country__c &lt;&gt; &quot;USA&quot;
    )
)</errorConditionFormula>
    <errorMessage>Error: Uncheck Surplus Lines Quote. We cannot be the surplus lines broker if a) we are using a wholesaler or b) the client has no US address.</errorMessage>
</ValidationRule>
