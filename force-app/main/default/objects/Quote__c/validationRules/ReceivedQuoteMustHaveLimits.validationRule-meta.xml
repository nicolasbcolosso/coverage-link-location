<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ReceivedQuoteMustHaveLimits</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISPICKVAL(Status__c, &quot;Received&quot;),
  Quote_Coverage_Links__c = 0,
  NOT(ISCLONE()),
  $Profile.Name &lt;&gt; &quot;System Administrator&quot;
)</errorConditionFormula>
    <errorMessage>Quote must have limits before it can be moved to Received Status</errorMessage>
</ValidationRule>
